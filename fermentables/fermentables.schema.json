{
    "$id": "https://api-menuviz.net/fermentables.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "BeerJSONModel",
    "description": "A simple schema to describe something yeast can ferment.",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "label": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "color": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "number"
                },
                "units": {
                    "type": "string"
                }
            }
        },
        "recomendMash": {
            "type": "boolean"
        },
        "countryOfOrigin": {
            "type": "object",
            "properties": {
                "label": {
                    "type": "string"
                },
                "twoChar": {
                    "type": "string"
                },
                "threeChar": {
                    "type": "string"
                }
            }
        }
    },
    "required": [
        "label",
        "color"
    ]
}
